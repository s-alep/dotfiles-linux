layout{
    tab name="logs" {
        pane split_direction="vertical"{
            pane{
                command "bash"
                args "-c" "ssh ovh 'docker logs gsport_app -f'"
            }

            pane {
                command "bash"
                args "-c" "ssh ovh 'docker logs sl2_app -f'"
            }
        }
        pane size=1 borderless=true {
            plugin location="zellij:compact-bar"
        }
    }
    tab name="ld" {
        pane {
            command "bash"
            args "-c" "ssh ovh "
        }
        pane size=1 borderless=true {
            plugin location="zellij:compact-bar"
        }
    }
}
