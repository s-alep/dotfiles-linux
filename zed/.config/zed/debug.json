[
  {
    "label": "ddev listen",
    "adapter": "PHP",
    "request": "launch",
    "pathMappings": {
      "/var/www/html/web/": "$ZED_WORKTREE_ROOT/web/"
    }
  },
  {
    "request": "attach",
    "adapter": "Debugpy",
    "label": "new attach",
    "tcp_connection": { "host": "127.0.0.1", "port": 5678 },
    "cwd": "$ZED_WORKTREE_ROOT",
    "port": 5678,
    "log": true,
    // "pathMappings": [
    //   {
    //     "localRoot": "${ZED_WORKTREE_ROOT}",
    //     "remoteRoot": "/workspace"
    //   }
    // ]
  },
  {
    "label": "Debug active Python file",
    "adapter": "Debugpy",
    "program": "$ZED_FILE",
    "request": "launch",
    "cwd": "$ZED_WORKTREE_ROOT"
  },
  {
    "label": "Debug active JavaScript file",
    "adapter": "JavaScript",
    "program": "$ZED_FILE",
    "request": "launch",
    "cwd": "$ZED_WORKTREE_ROOT",
    "type": "pwa-node"
  },
  {
    "label": "JavaScript debug terminal",
    "adapter": "JavaScript",
    "request": "launch",
    "cwd": "$ZED_WORKTREE_ROOT",
    "console": "integratedTerminal",
    "type": "pwa-node"
  }
]
