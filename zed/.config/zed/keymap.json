// Zed keymap
//
// For information on binding keys, see the Zed
// documentation: https://zed.dev/docs/key-bindings
//
// To see the default key bindings run `zed: open default keymap`
// from the command palette.
[
  {
    "context": "Editor && showing_completions",
    "bindings": {
      "ctrl-y": "editor::ConfirmCompletion"
    }
  },
  {
    "context": "vim_operator == a || vim_operator == i || vim_operator == cs",
    "bindings": {
      "q": "vim::MiniQuotes",
      "b": "vim::MiniBrackets"
    }
  },
  {
    "context": "Dock",
    "bindings": {
      "ctrl-h": "workspace::ActivatePaneLeft",
      "ctrl-l": "workspace::ActivatePaneRight",
      "ctrl-k": "workspace::ActivatePaneUp"
    }
  },
  {
    "context": "vim_mode == visual && !menu",
    "bindings": {
      "space w i": "assistant::InlineAssist"
    }
  },
  {
    "context": "vim_mode == normal && !menu",
    "bindings": {
      "ctrl-shift-u": "vim::ScrollUp",
      "ctrl-shift-d": "vim::ScrollDown",
      "space q": "editor::ToggleDiagnostics",
      "ctrl-u": ["workspace::SendKeystrokes", "ctrl-shift-u z z"],
      "ctrl-d": ["workspace::SendKeystrokes", "ctrl-shift-d z z"],
      "space p": "file_finder::Toggle",
      "space s g" : "workspace::NewSearch",
      "space space": "tab_switcher::ToggleAll",
      "space a": "workspace::ToggleRightDock",
      "space x": "project_panel::ToggleFocus",
      "space X": "zed::Extensions",
      "space w i": "assistant::InlineAssist",
      "space w e": "agent::ToggleFocus",
      "space t t": "workspace::ToggleBottomDock",
      "space b": "editor::ToggleBreakpoint",
      "space d b": "debugger::ClearAllBreakpoints",
      "space d v": "debugger::FocusVariables",
      "space d t": "debugger::Stop",
      "space d n": "debugger::Continue",
      "space d d": "debugger::Start",
      "ctrl-h": "workspace::ActivatePaneLeft",
      "ctrl-l": "workspace::ActivatePaneRight",
      "ctrl-k": "workspace::ActivatePaneUp",
      "ctrl-j": "workspace::ActivatePaneDown",
      "space s c": "theme_selector::Toggle"
    }
  }
]
