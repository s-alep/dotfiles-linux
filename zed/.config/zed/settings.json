{
  "ssh_connections": [
    {
      "host": "sl2flask.devpod",
      "projects": [
        {
          "paths": [
            "/workspace"
          ]
        }
      ]
    }
  ],
  "format_on_save": "off",
  "auto_install_extensions": {
    "html": true,
    "php": true,
    "dockerfile": true,
    "tokyo-night": true,
    "kanagawa-themes": true,
    "iceberg": true,
    "rust-rover-dark-theme": true,
    "basedpyright" : true
  },
  "cursor_blink": false,
  "collaboration_panel": {
    "dock": "right"
  },
  "outline_panel": {
    "dock": "right"
  },
  "git_panel": {
    "dock": "right"
  },
  "project_panel": {
    "dock": "right"
  },
  "languages": {
    "Python": {
      "language_servers": ["basedpyright"]
    }
  },
  "lsp": {
    "ruff": {
      "initialization_options" : {
        "settings": {
          "organiseImports" : false,
          "lint" : {
            "ignore" : [ "F403" , "F405", "E712" ]
          }
        }
      }
    },
    "basedpyright": {
      "settings": {
        "basedpyright.analysis": {
          "diagnosticSeverityOverrides": {
            "reportUnknownMemberType": "none",
            "reportUnknownArgumentType": "none",
            "reportUnknownLambdaType": "none",
            "reportUnknownVariableType": "none",
            "reportMissingParameterType": "none",
            "reportUnknownParameterType": "none",
            "reportUnusedCallResult" : "none"
          }
        }
      }
    },
    "rust-analyzer": {
      "binary": {
        "path": "/usr/lib/rustup/bin/rust-analyzer"
      }
    }
  },
  "agent": {
    "single_file_review": true,
    "always_allow_tool_actions": true,
    "default_model": {
      "provider": "google",
      "model": "gemini-2.5-flash"
    },
    "model_parameters": [],
    "default_profile": "ask"
  },
  "base_keymap": "VSCode",
  "telemetry": {
    "metrics": false,
    "diagnostics": false
  },
  "restore_on_startup": "none",
  "hide_mouse": "on_typing",
  "git": {
    "inline_blame": {
      "enabled": false
    }
  },
  "scrollbar": {
    "show": "never"
  },
  "tab_bar": {
    "show_nav_history_buttons": false
  },
  "toolbar": {
    "breadcrumbs": false,
    "quick_actions": false,
    "selections_menu": false,
    "agent_review": false
  },
  "always_treat_brackets_as_autoclosed": true,
  // Fonts
  "buffer_font_family": "JetBrainsMono Nerd Font",
  "ui_font_family": "JetBrainsMono Nerd Font",
  "ui_font_fallbacks": ["CaskaydiaCove Nerd Font Mono"],
  "relative_line_numbers": true,
  "vim_mode": true,
  "vim": {
    "highlight_on_yank_duration": 100
  },
  "ui_font_size": 16,
  "buffer_font_size": 15,
  "show_whitespaces": "all",
  "icon_theme": "Zed (Default)",
  "theme": {
    "mode": "dark",
    "light": "Tokyo Night Light",
    "dark": "Kanagawa Dragon - No Italics"
  }
}
