{
  "format_on_save": "off",
  "auto_install_extensions": {
    "html": true,
    "php": true,
    "dockerfile": true,
    "tokyo-night": true,
    "pylsp": true,
    "kanagawa-themes": true,
    "iceberg": true,
    "rust-rover-dark-theme": true
  },
  "cursor_blink": false,
  "collaboration_panel": {
    "dock": "right"
  },
  "outline_panel": {
    "dock": "right"
  },
  "git_panel": {
    "dock": "right"
  },
  "project_panel": {
    "dock": "right"
  },
  "lsp": {
    "rust-analyzer": {
      "binary": {
        "path": "/usr/lib/rustup/bin/rust-analyzer"
      }
    }
  },
  "agent": {
    "single_file_review": true,
    "always_allow_tool_actions": true,
    "default_model": {
      "provider": "google",
      "model": "gemini-2.5-flash"
    },
    "model_parameters": [],
    "default_profile": "ask"
  },
  "base_keymap": "VSCode",
  "telemetry": {
    "metrics": false,
    "diagnostics": false
  },
  "restore_on_startup": "none",
  "hide_mouse": "on_typing",
  "git": {
    "inline_blame": {
      "enabled": false
    }
  },
  "scrollbar": {
    "show": "never"
  },
  "tab_bar": {
    "show_nav_history_buttons": false
  },
  "toolbar": {
    "breadcrumbs": false,
    "quick_actions": false,
    "selections_menu": false,
    "agent_review": false
  },
  "always_treat_brackets_as_autoclosed": true,
  // Fonts
  "buffer_font_family": "Iosevka Nerd Font Mono",
  "ui_font_family": "Iosevka Nerd Font Mono",
  "ui_font_fallbacks": ["CaskaydiaCove Nerd Font Mono"],
  "relative_line_numbers": true,
  "vim_mode": true,
  "vim": {
    "highlight_on_yank_duration": 100
  },
  "ui_font_size": 16,
  "buffer_font_size": 16,
  "show_whitespaces": "all",
  "icon_theme": "Zed (Default)",
  "theme": {
    "mode": "dark",
    "light": "Tokyo Night Light",
    "dark": "Gruvbox Dark Hard"
  }
}
