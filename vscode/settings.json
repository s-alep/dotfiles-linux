{
  "editor.minimap.enabled": false,
  "workbench.activityBar.location": "hidden",
  "github.copilot.enable": {
    "*": false,
    "plaintext": false,
    "markdown": false,
    "scminput": false,
    "python": true
  },
  "files.trimTrailingWhitespace": true,
  "security.workspace.trust.untrustedFiles": "open",
  "terminal.integrated.defaultProfile.windows": "Git Bash",
  "vim.easymotion": false,
  "vim.incsearch": true,
  "vim.useSystemClipboard": true,
  "vim.useCtrlKeys": true,
  "vim.hlsearch": true,
  "vim.foldfix": true,
  "vim.visualstar": true,
  "vim.highlightedyank.enable": true,
  "vim.highlightedyank.duration": 100,
  "vim.enableNeovim": true,
  "vim.insertModeKeyBindings": [
    {
      "before": [ "j", "j" ],
      "after": [ "<Esc>" ]
    },
    {
      "before": [ "<C-s>" ],
      "commands": [ "editor.action.insertSnippet" ]
    },
    {
      "before": [ "<up>" ],
      "commands": []
    },
    {
      "before": [ "<down>" ],
      "commands": []
    },
    {
      "before": [ "<left>" ],
      "commands": []
    },
    {
      "before": [ "<right>" ],
      "commands": []
    },
  ],
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before" : ["<C-h>"],
      "commands": [ "workbench.action.navigateLeft" ],
    },{
      "before" : ["<C-j>"],
      "commands": [ "vim.showQuickpickCmdLine" ],
    },{
      "before" : ["<C-k>"],
      "commands": [ "vim.showQuickpickCmdLine" ],
    },{
      "before" : ["<C-l>"],
      "commands": [ "workbench.action.navigateRight" ],
    },{
      "before" : [":"],
      "commands": [ "vim.showQuickpickCmdLine" ],
    },{
      "before" : ["<leader>", "<leader>"],
      "commands" : ["workbench.action.showAllEditors"]
    },{
      "before" : ["<leader>", "/"],
      "commands" : ["fuzzySearch.activeTextEditor"]
    },{
      "before": [  "g", "s" ],
      "commands": [ "workbench.action.gotoSymbol" ]
    },
    {
      "before": [  "g", "S" ],
      "commands": [ "workbench.action.showAllSymbols" ]
    },
    {
      "before": [ "<leader>", "s", "p" ],
      "commands": [ "workbench.action.openRecent" ]
    },
    { "before": [ "<leader>", "s", "g", ], "commands": [ { "command" : "workbench.action.quickOpen", "args" : "%" } ], "silent": true },
    { "before": [ "<leader>", "t"], "commands": [ ":tabnew" ] }, { "before": [ "<C-u>" ], "after": [ "<C-u>", "z", "z" ] },
    { "before": [ "<C-d>" ], "after": [ "<C-d>", "z", "z" ] },
    { "before": [ "<C-n>" ], "commands": [ ":nohl" ] },
    { "before": [ "K" ], "commands": [ "lineBreakInsert" ], "silent": true },
    { "before": [ "<leader>", "p" ],
     "commands": [ "workbench.action.quickOpen" ],
      "silent": true
    },
    {
      "before": ["<leader>",  ";" ],
      "commands": [ "workbench.action.showCommands" ],
      "silent": true
    },
    {
      "before": [ "<leader>", "c", "b" ],
      "commands": [ "breadcrumbs.focusAndSelect" ],
      "silent": true
    },
    {
      "before": [ "<leader>", "c", "x" ],
      "commands": [ "editor.action.quickFix" ],
      "silent": true
    },{
      "before": [ "<leader>", "c", "o" ],
      "commands": [ "editor.action.showDefinitionPreviewHover" ],
    },
    {
      "before": [ "<leader>", "c", "h" ],
      "commands": [ "editor.action.triggerParameterHints" ],
    },
    {
      "before": [ "<leader>", "c", "s" ],
      "commands": [ "editor.action.triggerSuggest" ],
      "silent": true
    },
    {
      "before": [ "<leader>", "c", "<leader>" ],
      "commands": [ "toggleSuggestionDetails" ],
      "silent": true
    },
    {
      "before": [ "<leader>", "X" ],
      "commands": [ "workbench.view.extensions" ],
      "silent": true
    },
    {
      "before": [ "<leader>", "x" ],
      "commands": [ "workbench.view.explorer" ],
      "silent": true
    },
    {
      "before": [ "<leader>", "g" ],
      "commands": [ "workbench.view.scm" ],
      "silent": true
    },
    {
      "before": [ "<leader>", "c", "c" ],
      "commands": [ "workbench.action.chat.open" ],
      "silent": true
    },
    {
      "before": [ "<leader>", "c", "C" ],
      "commands": [ "workbench.action.chat.openInEditor" ],
      "silent": true
    },
    {
      "before": [ "<leader>", "c", "i" ],
      "commands": [ "inlineChat.start" ],
      "silent": true
    },
    {
      "before": [ "<leader>", "a"
      ],
      "commands": [ "workbench.action.toggleSidebarVisibility" ],
      "silent": true
    },
    {
      "before": [ "<leader>", "d", "v" ],
      "commands": [ "workbench.view.debug", "workbench.debug.action.focusVariablesView" ],
      "silent": true
    },
    {
      "before": [ "<leader>", "d", "b" ],
      "commands": [ "workbench.view.debug", "workbench.debug.action.focusBreakpointsView" ],
      "silent": true
    },
    {
      "before": [ "<leader>", "d", "n" ],
      "commands": [ "workbench.action.debug.continue", ],
      "silent": true
    },{
      "before": [ "<leader>", "d", "h" ],
      "commands": [ "editor.debug.action.showDebugHover", ],
      "silent": true
    },
    {
      "before": [ "<leader>", "d", "w" ],
       "commands": [ "workbench.view.debug", "workbench.debug.action.focusWatchView" ],
      "silent": true
    },
    {
      "before": [ "<leader>", "d", "t" ],
      "commands": [ "workbench.action.debug.stop" ],
      "silent": true
    },
    {
      "before": [ "<leader>", "d", "a" ],
      "after": [ "v", "i", "w", "<leader>", "d", "w" ],
      "silent": true
    },
    {
      "before": [ "<leader>", "d", "d" ],
      "commands": [ "workbench.action.debug.start" ],
      "silent": true
    },
    {
      "before": [ "<leader>", "d", "r" ],
      "commands": [ "workbench.action.debug.restart" ],
      "silent": true
    },
    {
      "before": [ "<leader>", "b" ],
      "commands": [ "editor.debug.action.toggleBreakpoint" ],
      "silent": true
    },
    {
      "before": [ "<leader>", ",", ],
      "commands": [ "workbench.debug.viewlet.action.removeAllBreakpoints" ],
      "silent": true
    },
    {
      "before": [ "<leader>", "B"],
      "commands": [ "debug.editBreakpoint" ],
      "silent": true
    },
    {
      "before": [ "<leader>", ",", "," ],
      "commands": [ "workbench.debug.viewlet.action.disableAllBreakpoints" ],
      "silent": true
    },
    {
      "before": [ "<leader>", ",", "<" ],
      "commands": [ "workbench.debug.viewlet.action.enableAllBreakpoints" ],
      "silent": true
    },
    {
      "before" : ["g", "D"],
      "commands" : ["editor.action.peekDefinition"],
      "silent" : true
    },
    {
      "before" : ["g", "H"],
      "commands" : ["editor.action.revealDefinitionAside"],
      "silent" : true
    }
  ],
  "vim.visualModeKeyBindings": [
    {
      "before": [ "<leader>", "c", "i" ],
      "commands": [ "inlineChat.start" ],
      "silent": true
    },
    {
      "before": [ "<leader>", "d", "w" ],
      "commands": [ "editor.debug.action.selectionToWatch" ],
      "silent": true
    },
    {
      "before": ["<leader>",  ";" ],
      "commands": [ "workbench.action.showCommands" ],
      "silent": true
    },
  ],
  "vim.visualModeKeyBindingsNonRecursive": [
      {
          "before": ["p",],
          "after": ["p","g","v","y"]
      }
  ],
  "vim.leader": "<space>",
  "vim.handleKeys": {
  },
  // To improve performance
  "[jsonc]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "git.suggestSmartCommit": false,
  "workbench.editor.pinnedTabsOnSeparateRow": true,
  "workbench.editor.tabSizing": "fixed",
  "workbench.editor.tabSizingFixedMaxWidth": 200,
  "workbench.editor.showTabs": "single",
  "errorLens.enabled": false,
  "vim.smartRelativeLine": true,
  "workbench.startupEditor": "none",
  "terminal.integrated.fontFamily": "JetBrainsMono Nerd Font",
  "editor.fontFamily": "JetBrainsMono Nerd Font",
  "terminal.integrated.letterSpacing": 1,
  "editor.minimap.sectionHeaderLetterSpacing": 0,
  "explorer.confirmDelete": false,
  "workbench.iconTheme": "gruvbox-material-icon-theme",
  "workbench.layoutControl.enabled": false,
  "chat.commandCenter.enabled": false,
  "window.commandCenter": false,
  "window.menuBarVisibility": "compact",
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "explorer.confirmDragAndDrop": false,
  "workbench.sideBar.location": "right",
  "editor.wordWrap": "on",
  "workbench.colorCustomizations": {
    "[Everforest Dark]": {
      "editor.background" : "#24283b",
      "quickInput.background" : "#1d2033",
      "sideBar.background": "#1a1b26",
      "activityBar.background": "#1a1b26",
      "titleBar.activeBackground": "#1a1b26",
      "titleBar.inactiveBackground": "#16161e",
      "statusBar.background": "#1a1b26",
      "editorGroupHeader.noTabsBackground": "#232433",
      "tab.inactiveBackground": "#16161e",
      "breadcrumb.background": "#1a1b26",
      "tab.activeBackground": "#24283b",
      "panel.background": "#1a1b26",
      "panel.border": "#414868",
      "terminal.background": "#1a1b26",
      "terminal.border": "#414868",
      "panelSectionHeader.background": "#16161e",
      "panelSection.border": "#414868"
    }
  },
  "terminal.integrated.gpuAcceleration": "off",
  "workbench.colorTheme": "Kanagawa Wave",
  "zenMode.showTabs": "none",
  "[markdown]": {
    "editor.defaultFormatter": "yzhang.markdown-all-in-one"
  },
  "remote.autoForwardPortsSource": "hybrid",
  "terminal.integrated.smoothScrolling": false,
  "editor.smoothScrolling": false,
  "editor.accessibilitySupport": "off",
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "editor.fontLigatures": true,
}