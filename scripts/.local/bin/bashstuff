bind '"\C-j": ""'

shopt -s autocd
shopt -s cdable_vars
shopt -s cdspell

DEV=/home/salepakos/Documents/dev

# aliases
alias v='nvim'
alias V='sudo nvim'
alias src='source ~/.bashrc'
alias edt='nvim ~/.bashrc'
alias cat='bat'
alias z=zeditor
alias ls='ls -g --group-directories-first --color'
alias la='ls -gA --group-directories-first --color'
alias x='xdg-open'

alias lg='lazygit'
alias ld='lazydocker'
alias tj='tjournal'
alias notes='NVIM_APPNAME=obsivim nvim'

alias conf='nvim "$(fd -d 1 -td -L . ~/.config | fzf --height=30% --border=rounded)"'
alias d=sessionizer.lua

alias paruf="paru -Slq | fzf --multi --preview 'paru -Sii {1}' --preview-window=down:75% | xargs -ro paru -S"
alias paruq="paru -Q | fzf --multi --preview 'paru -Sii {1}' --preview-window=down:75% | xargs -ro paru -S"

alias de='docker exec -it'
alias dpod="devpod up --devcontainer-path .devpod/devcontainer.json ."
alias docls='docker kill $(docker ps -q)'
alias cr="ddev drush cr"

eval "$(starship init bash)"
eval "$(fzf --bash)"
bind -m emacs-standard '"\ec":""'
bind -m emacs-standard '"\C-f": "\C-u`__fzf_cd__`\r\n"'

export FZF_PREVIEW_COLUMNS=40
export FZF_PREVIEW_LINES=10
export EDITOR='nvim'
export TERM='xterm-256color'
export MANPAGER='nvim +Man!'

export CARGO='~/.cargo/bin'
export BUN='~/.bun/bin/'
export LOCAL='~/.local/bin'
export PATH=$PATH:$CARGO:$LOCAL:$BUN

ddap() {
    docker exec -it $1 python -m debugpy --listen 0.0.0.0:5678 -m flask run
}

dbash() {
    docker exec -it $1 /bin/bash
}

