# aliases
alias v='nvim'
alias V='sudo nvim'
alias zed='zeditor'
alias c='clear'
alias de='docker exec -it'
alias lg='lazygit'
alias ld='lazydocker'
alias src='source ~/.bashrc'
alias edt='nvim ~/.bashrc'
alias ls="lsd -l --group-directories-first"
alias la="lsd -la --group-directories-first"
alias d=/home/salepakos/.config/sessionizer.lua
alias x='xdg-open'
alias conf='nvim "$(fd -d 1 -td -L . ~/.config | fzf --height=30% --border=rounded)"'
alias paruf="paru -Slq | fzf --multi --preview 'paru -Sii {1}' --preview-window=down:75% | xargs -ro paru -S"

eval "$(starship init bash)"
eval "$(zoxide init bash)"
eval "$(fzf --bash)"

