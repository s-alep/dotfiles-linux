// Some example tasks for common languages.
//
// For more documentation on how to configure debug tasks,
// see: https://zed.dev/docs/debugger
[
  {
    "request": "attach",
    "adapter": "Debugpy",
    "label": "new attach",
    "tcp_connection": { "host": "127.0.0.1", "port": 5678 },
    "cwd": "$ZED_WORKTREE_ROOT",
    "port": 5678,
    "log": true,
    "pathMappings": [
      {
        "localRoot": "${ZED_WORKTREE_ROOT}",
        "remoteRoot": "/workspace"
      }
    ]
  },
  {
    "label": "Attach",
    "adapter": "Debugpy",
    "request": "attach",
    // "debugAdapterPath": "/usr/bin/debugpy",
    "connect": {
      "port": 5678
    },
    "pathMappings": [
      {
        "localRoot": "${ZED_WORKTREE_ROOT}",
        "remoteRoot": "/workspace"
      }
    ]
  },
  {
    "label": "Debug active Python file",
    "adapter": "Debugpy",
    "program": "$ZED_FILE",
    "request": "launch",
    "cwd": "$ZED_WORKTREE_ROOT"
  },
  {
    "label": "Debug active JavaScript file",
    "adapter": "JavaScript",
    "program": "$ZED_FILE",
    "request": "launch",
    "cwd": "$ZED_WORKTREE_ROOT",
    "type": "pwa-node"
  },
  {
    "label": "JavaScript debug terminal",
    "adapter": "JavaScript",
    "request": "launch",
    "cwd": "$ZED_WORKTREE_ROOT",
    "console": "integratedTerminal",
    "type": "pwa-node"
  }
]
